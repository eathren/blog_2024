---
import Layout from '~/layouts/PageLayout.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'NB | Software Engineer',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Content Widget **************** -->
  <Fragment slot="content">
    <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Thoughts, musings, and more.</h3>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Fragment>

  <!-- HighlightedPosts Widget ******* -->

  <!-- HighlightedPosts Widget ******* -->
  <BlogLatestPosts
    title="Latest Posts"
    information={`The latest thoughts I have about software and more.
                `}
  />
</Layout>
